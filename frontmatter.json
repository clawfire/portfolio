{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "Talk",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "Language",
          "name": "language",
          "type": "choice",
          "choices": [
            "en",
            "fr"
          ],
          "default": "en"
        },
        {
          "title": "is Published",
          "name": "published",
          "type": "boolean",
          "default": true
        },
        {
          "title": "Date du talk",
          "name": "date",
          "type": "datetime"
        },
        {
          "title": "Titre du talk",
          "name": "title",
          "type": "string",
          "single": true
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string",
          "wysiwyg": "markdown"
        },
        {
          "title": "Image de l'événement",
          "name": "featured_image",
          "type": "image",
          "isPreviewImage": true
        },
        {
          "title": "Lien de l'évènement",
          "name": "event_link",
          "type": "string",
          "single": true
        },
        {
          "title": "Location",
          "name": "location",
          "type": "fields",
          "fields": [
            {
              "title": "Nom",
              "name": "name",
              "type": "string"
            },
            {
              "title": "URL",
              "name": "url",
              "type": "string",
              "single": true
            }
          ]
        }
      ]
    },
    {
      "name": "Blog Post",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "Layout",
          "name": "layout",
          "type": "choice",
          "choices": [
            "default",
            "post",
            "page",
            "project",
            "talk",
            "nothing"
          ],
          "default": "post"
        },
        {
          "title": "Title",
          "name": "title",
          "type": "string",
          "single": true
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string",
          "wysiwyg": "markdown"
        },
        {
          "title": "Publishing date",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Featured Image",
          "name": "featured_image",
          "type": "image",
          "isPreviewImage": true
        },
        {
          "title": "Is published",
          "name": "published",
          "type": "boolean",
          "default": true
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "Categories",
          "name": "categories",
          "type": "categories"
        }
      ]
    },
    {
      "name": "Page",
      "pageBundle": false,
      "fields": [
        {
          "title": "title",
          "name": "title",
          "type": "string",
          "single": true
        },
        {
          "title": "Layout",
          "name": "layout",
          "type": "choice",
          "choices": [
            "default",
            "post",
            "page",
            "project",
            "talk",
            "nothing"
          ],
          "default": "page"
        },
        {
          "title": "subtitle",
          "name": "subtitle",
          "type": "string"
        },
        {
          "title": "description",
          "name": "description",
          "type": "string",
          "wysiwyg": "markdown"
        },
        {
          "title": "featured_image",
          "name": "featured_image",
          "type": "image",
          "isPreviewImage": true
        }
      ]
    },
    {
      "name": "Projet",
      "pageBundle": false,
      "fields": [
        {
          "title": "title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "subtitle",
          "name": "subtitle",
          "type": "string"
        },
        {
          "title": "date",
          "name": "date",
          "type": "datetime",
          "dateFormat": "YYYY-MM-DD"
        },
        {
          "title": "skills",
          "name": "skills",
          "type": "list"
        },
        {
          "title": "techs",
          "name": "techs",
          "type": "list"
        },
        {
          "title": "industry",
          "name": "industry",
          "type": "list"
        },
        {
          "title": "description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "featured_image",
          "name": "featured_image",
          "type": "image",
          "isPreviewImage": true
        },
        {
          "title": "accent_color",
          "name": "accent_color",
          "type": "string"
        },
        {
          "title": "gallery_images",
          "name": "gallery_images",
          "type": "image",
          "multiple": true
        }
      ]
    }
  ],
  "frontMatter.framework.id": "jekyll",
  "frontMatter.content.publicFolder": "img",
  "frontMatter.preview.host": "http://localhost:4000",
  "frontMatter.content.pageFolders": [
    {
      "title": "Posts",
      "path": "[[workspace]]/content/_posts"
    },
    {
      "path": "[[workspace]]/content/_pages",
      "title": "Pages"
    },
    {
      "title": "Projets",
      "path": "[[workspace]]/content/_projects"
    },
    {
      "title": "Talks",
      "path": "[[workspace]]/content/_talks"
    }
  ],
  "frontMatter.git.enabled": true,
  "frontMatter.git.requiresCommitMessage": [
    "main"
  ],
  "frontMatter.content.snippets": {
    "Video Embed": {
      "description": "Embed a video iFrame into the page",
      "body": [
        "{% include post-components/video.html",
        "\turl = \"[[iframe_url]]\"",
        "\tfull_width = [[fullwidth]]",
        "%}"
      ],
      "fields": [
        {
          "name": "iframe_url",
          "type": "string"
        },
        {
          "name": "fullwidth",
          "type": "choice",
          "choices": [
            "true",
            "false"
          ],
          "default": "true"
        }
      ],
      "isMediaSnippet": false
    },
    "Picture Gallery": {
      "description": "Insert a picture gallery",
      "body": [
        "{% include post-components/gallery.html",
        "\tcolumns = [[column_nb]",
        "\tfull_width = [[fullsize]]",
        "\timages = \"[[&mediaUrl]]\"",
        "%}"
      ],
      "fields": [
        {
          "name": "column_nb",
          "type": "choice",
          "choices": [
            "1",
            "2",
            "3",
            "4",
            "5",
            "6"
          ],
          "default": "3"
        },
        {
          "name": "fullsize",
          "type": "choice",
          "choices": [
            "true",
            "false"
          ],
          "default": "true"
        }
      ],
      "isMediaSnippet": true
    }
  }
}
